{
	"name": "codespaces-export-to-gmail",
	"dockerComposeFile": [ "docker-compose.yml" ],
	"service": "codespaces-export-to-gmail",
	"workspaceFolder": "/workspace",
	"features": {
		// "ghcr.io/devcontainers/features/docker-in-docker": {
		// },    
    "ghcr.io/devcontainers/features/java:1": {
      "version": "21",
      "installMaven": "true",
      "installGradle": "false",
			"MAVENVERSION": "3.9.6"
    }
  },
  "customizations": {
		"codespaces": {
			"openFiles": [
				"AGENTS.md"
			]
		},
		"extensions": [
			"vscjava.vscode-java-pack",
			"pivotal.vscode-spring-boot",
			"redhat.vscode-yaml",
			"vmware.vscode-boot-dev-pack"
		],        
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "pivotal.vscode-spring-boot",
        "redhat.vscode-yaml",
		"vmware.vscode-boot-dev-pack",
        "openai.chatgpt",
		"GitHub.copilot-chat",
		"GitHub.copilot"        
      ]
    }
  },
  	"secrets": {
                "USER_CODESPACE_PROTONMAILEXPORT_ENV_PRODUCTION_USER": {
                        "description": "SSH username for the production Proton Mail export host.",
			"documentationUrl": "https://docs.github.com/en/codespaces/managing-your-codespaces/managing-encrypted-secrets-for-your-codespaces"
		},
                "USER_CODESPACE_PROTONMAILEXPORT_ENV_PRODUCTION_HOST": {
                        "description": "SSH hostname for the production Proton Mail export host.",
			"documentationUrl": "https://docs.github.com/en/codespaces/managing-your-codespaces/managing-encrypted-secrets-for-your-codespaces"
		},
                "USER_CODESPACE_PROTONMAILEXPORT_ENV_PRODUCTION_RSA_PRIVATE": {
                        "description": "Private SSH key (PEM) for connecting to the production Proton Mail export host.",
			"documentationUrl": "https://docs.github.com/en/codespaces/managing-your-codespaces/managing-encrypted-secrets-for-your-codespaces"
		},
                "USER_CODESPACE_PROTONMAILEXPORT_ENV_PRODUCTION_RSA_PUBLIC": {
                        "description": "Public SSH key associated with the production Proton Mail export host.",
			"documentationUrl": "https://docs.github.com/en/codespaces/managing-your-codespaces/managing-encrypted-secrets-for-your-codespaces"
		},
                "USER_CODESPACE_PROTONMAILEXPORT_ENV_PRODUCTION_GMAIL_APP_USERNAME": {
                        "description": "Gmail app username used by the Proton Mail export integration.",
			"documentationUrl": "https://docs.github.com/en/codespaces/managing-your-codespaces/managing-encrypted-secrets-for-your-codespaces"
		},
                "USER_CODESPACE_PROTONMAILEXPORT_ENV_PRODUCTION_GMAIL_APP_PASSWORD": {
                        "description": "Gmail app password used by the Proton Mail export integration.",
			"documentationUrl": "https://docs.github.com/en/codespaces/managing-your-codespaces/managing-encrypted-secrets-for-your-codespaces"
		}
	},	
//	"postCreateCommand": "sudo chown -R vscode:vscode /workspace"
  "postCreateCommand": "sudo chown -R vscode:vscode /workspace && chmod +x /workspace/.devcontainer/codespaces-export-to-gmail/setup-ssh.sh && bash /workspace/.devcontainer/codespaces-export-to-gmail/setup-ssh.sh"
}
